        <h1 class="texto-izquierdo">Navega por</h1> <h1 class="texto-izquierdo texto-azul">nuestros <strong class="texto-celeste">cursos</strong></h1>
<div class="contenedor-principal">
    <div class="container-carusel"> 
        <div class="tienda-container">
            {{#each cursos}}
                <div class="articulo">
                    <img class="roundImage" src="{{this.image}}" alt="Imagen Redonda">
                    <p class="title">{{this.title}}</p>
                    <p class="descripcion">{{this.description}}</p>
                    <a href="{{this.link}}">
                        <button class="roundedButton">Ver más</button>
                    </a>
                </div>
            {{/each}}
        </div>
    </div>

    <div class="navegacion-botones">
        <button onclick="navegar('anterior')"><</button>
        <button onclick="navegar('siguiente')">></button>
    </div>
</div>

    
    <!--PIE DE PAGINA -->
    <script src="javascript/footer.js"></script>
    <script>
    function cargarSiguiente() {
    // Ajusta estos valores según la lógica de tu base de datos
    const elementosPorGrupo = 6;
    const totalElementos = cursos.length;

    // Verifica si hay más elementos para cargar
    if (grupoActual * elementosPorGrupo < totalElementos) {
        const inicio = grupoActual * elementosPorGrupo;
        const fin = Math.min((grupoActual + 1) * elementosPorGrupo, totalElementos);

        // Renderiza el siguiente grupo de elementos
        const nuevosElementos = cursos.slice(inicio, fin);
        renderizarElementos(nuevosElementos);

        // Actualiza el número del grupo actual
        grupoActual++;
    }
}

    function renderizarElementos(elementos) {
    const tiendaContainer = document.querySelector('.tienda-container');

    // Limpia el contenido existente en el contenedor
    tiendaContainer.innerHTML = '';

    // Itera sobre los nuevos elementos
    elementos.forEach(elemento => {
        // Crea un nuevo elemento div para cada curso
        const nuevoElemento = document.createElement('div');
        nuevoElemento.classList.add('articulo');

        // Crea la imagen
        const imagen = document.createElement('img');
        imagen.classList.add('roundImage');
        imagen.src = elemento.image;
        imagen.alt = 'Imagen Redonda';

        // Crea el párrafo del título
        const titulo = document.createElement('p');
        titulo.classList.add('title');
        titulo.textContent = elemento.title;

        // Crea el párrafo de la descripción
        const descripcion = document.createElement('p');
        descripcion.classList.add('descripcion');
        descripcion.textContent = elemento.description;

        // Crea el enlace al curso
        const enlace = document.createElement('a');
        enlace.href = elemento.link;

        // Crea el botón "Ver más"
        const boton = document.createElement('button');
        boton.classList.add('roundedButton');
        boton.textContent = 'Ver más';

        // Agrega la imagen, el título, la descripción y el botón al elemento
        nuevoElemento.appendChild(imagen);
        nuevoElemento.appendChild(titulo);
        nuevoElemento.appendChild(descripcion);
        enlace.appendChild(boton);
        nuevoElemento.appendChild(enlace);

        // Agrega el nuevo elemento al contenedor de la tienda
        tiendaContainer.appendChild(nuevoElemento);
    });
}

</script>
